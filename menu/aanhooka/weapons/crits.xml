<Tab name="Crits" padding="4 4 4 4">
    <Box padding="12 6 6 6" width="content" height="content" name="Crits">
        <List width="200">
            <AutoVariable width="fill" target="crit.enabled" label="Weapon Crithack"/>
            <AutoVariable width="fill" target="crit.melee" label="Melee Crithack" tooltip="Must enable weapon crithack to use"/>
            <AutoVariable width="fill" target="crit.anti-crit" label="Save Crits"/>
            <AutoVariable width="fill" target="crit.key" label="Crit Hotkey"/>
        </List>
    </Box>
    <Box padding="12 6 6 6" width="content" height="content" name="Draw Text" y="85">
      <List width="200">
        <AutoVariable width="fill" target="crit.info" label="Crit text"/>
        <AutoVariable width="fill" target="crit.draw-info.x" label="Text x" min="0" max="2000"/>
        <AutoVariable width="fill" target="crit.draw-info.y" label="Text y" min="0" max="2000"/>
      </List>
    </Box>
    <Box padding="12 6 6 6" width="content" height="content" name="Draw Box" y="155">
      <List width="200">
        <AutoVariable width="fill" target="crit.draw-meter" label="Enable Crit Bar"/>
        <AutoVariable width="fill" target="crit.bar-x" label="Bar x" min="0" max="2000"/>
        <AutoVariable width="fill" target="crit.bar-y" label="Bar y" min="0" max="2000"/>
        <AutoVariable width="fill" target="crit.bar-size" label="Bar size" min="0" max="2000"/>
      </List>
    </Box>
</Tab>
